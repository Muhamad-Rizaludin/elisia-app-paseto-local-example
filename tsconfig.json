{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "bun-types"
    ],
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@schemas/*": [
        "src/schemas/*"
      ],
      "@relations/*": [
        "src/relations/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@plugins/*": [
        "src/plugins/*"
      ]
    },
    "outDir": "dist"
  },
  "include": [
    "src",
    "tests"
  ]
}
