{
  "name": "elisia-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development bun --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --packages external --outdir dist",
    "start": "cross-env NODE_ENV=production bun dist/index.js",
    "db:migrate": "bunx sequelize-cli db:migrate --config sequelize.config.js",
    "db:seed": "bunx sequelize-cli db:seed:all --config sequelize.config.js",
    "db:reset": "bunx sequelize-cli db:migrate:undo:all --config sequelize.config.js && bun run db:migrate && bun run db:seed",
    "test:prepare": "cross-env NODE_ENV=test bunx sequelize-cli db:migrate --config sequelize.config.js && cross-env NODE_ENV=test bunx sequelize-cli db:seed:all --config sequelize.config.js",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.0",
    "@elysiajs/swagger": "^1.1.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "elysia": "^1.1.26",
    "paseto": "^3.1.4",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.5",
    "winston": "^3.17.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.2",
    "bun-types": "^1.2.19",
    "cross-env": "^7.0.3",
    "sequelize-cli": "^6.6.2",
    "typescript": "^5.7.2"
  }
}
